theory SecureDrop
begin

builtins: symmetric-encryption, asymmetric-encryption, diffie-hellman, signing

// KDF
functions: hkdf/1

/*

Color semantics:

- Yellow (#FDFD96)      Key setup/distribution
- Red (#FF6961)         Adversary activity
- Light blue (#B4D9EF)  Message Fetching
- Dark blue (#6495ED)   Messaging
- Orange (#FF7F50)      Registration/Enrollment

 */

// Key Registration

rule Register_Newsroom_Key [color=#FDFD96]:
  [ Fr(~ltk) ]
  -->
  [ !Ltk_Newsroom($A, ~ltk), !Pk_Newsroom($A, pk(~ltk)), Out(pk(~ltk)) ]

rule Reveal_Newsroom_Key [color=#FF6961]:
  [ !Ltk_Newsroom(A, ltk) ]
  --[ Reveal_Newsroom_Key(A), Reveal(A), SomeCompromise() ]->
  [ Out(ltk) ]

rule Register_Source_Encryption_Key [color=#FDFD96]:
  let public_key = pk(~ltk)
  in
  [ Fr(~ltk) ]
  --[ Register_Source($A, public_key) ]->
  [ !Ltk_Source_Encryption($A, ~ltk), !Pk_Source_Encryption($A, public_key) ]

rule Reveal_Source_Encryption_Key [color=#FF6961]:
  let public_key = pk(ltk) 
  in
  [ !Ltk_Source_Encryption(A, ltk) ]
  --[ Reveal_Source_Encryption_Key(A), Reveal_Source_Encryption_Key(public_key), Reveal_Longterm_Secret(A), Reveal(A), SomeCompromise() ]->
  [ Out(ltk) ]

rule Reveal_Source_Encryption_Public_Key [color=#FF6961]:
  [ !Pk_Source_Encryption(A, public_key) ]
  --[ Reveal_Source_Encryption_Public_Key(A), Reveal_Source_Encryption_Public_Key(public_key), Reveal(A), SomeCompromise() ]->
  [ Out(public_key) ]


// Journalist Enrollment

rule Journalist_Enrollment [color=#FF7F50]:
  let j_pk = pk(~j_sk)
      sig_j_pk = sign(j_pk, nr_sk)
  in
  [ !Ltk_Newsroom($NR, nr_sk)
  , Fr(~j_sk)]
  --[ Journalist_Verified($NR, $J)
    , OnlyOnce($J) ]->
  [ Out(<j_pk, sig_j_pk>)
  , !Journalist_Enrolled($NR, $J)
  , !Ltk_Journalist_Signing($J, ~j_sk)
  , !Pk_Journalist_Signing($J, j_pk) ]

rule Reveal_Journalist_Signing_Key [color=#FF6961]:
  [ !Ltk_Journalist_Signing(A, ltk) ]
  --[ Reveal_Journalist_Signing_Key(A), Reveal_Longterm_Secret(A), Reveal(A), SomeCompromise() ]->
  [ Out(ltk) ]

rule Journalist_Register_Ephemeral_Key [color=#FF7F50]:
  let je_pk = pk(~je_sk)
      sig_je_pk = sign(<'ephemeral', je_pk>, j_sk)
  in
  [ !Ltk_Journalist_Signing($J, j_sk)
  , Fr(~je_sk) ]
  -->
  [ Out(<je_pk, sig_je_pk>)
  , Journalist_Ephemeral_Key($J, ~je_sk)
  , !Journalist_Ephemeral_Public_Key($J, pk(~je_sk))
  , Journalist_Ephemeral_Key_Reveal($J, ~je_sk) ]

rule Reveal_Journalist_Ephemeral_Key [color=#FF6961]:
  let public_key = pk(je_sk)
  in
  [ Journalist_Ephemeral_Key_Reveal(J, je_sk) ]
  --[ Reveal_Journalist_Ephemeral_Key(J, public_key), Reveal(J), SomeCompromise() ]->
  [ Out(je_sk) ]

// Messaging and Fetching Protocol

rule Source_Submit [derivchecks, color=#6495ED]:
  let s_pk = pk(s_sk)
      k = hkdf(~ss)
      m = <'msg', ~msg, s_pk>
      c = senc(m, k)
      ss_encap = aenc(~ss, je_pk)
  in
  [ !Ltk_Source_Encryption($S, s_sk)
  , !Pk_Newsroom($NR, nr_pk)
  , !Pk_Journalist_Signing($J, j_pk)
  , In(<j_pk, sig_j_pk, je_pk, sig_je_pk>)
  , Fr(~msg)
  , Fr(~ss) ]
  --[ // check signatures of journalist's longterm signature and ephemeral encryption keys
      Eq(verify(sig_j_pk, j_pk, nr_pk), true)
    , Eq(verify(sig_je_pk, <'ephemeral', je_pk>, j_pk), true)
      // Actions for Lemmas
    , Symmetric_Encryption_OUT(m, k)
    , Source_Sent(s_pk, $J, je_pk, $NR, m)
    ]->
  [ Out(<c, ss_encap>) ]

rule Journalist_Recv [derivchecks, color=#6495ED]:
  let ss = adec(ss_encap, je_sk)
      k = hkdf(ss)
      m = <'msg', msg, s_pk>
      je_pk = pk(je_sk)
  in
  [ In(<senc(m, k), ss_encap>)
  , Journalist_Ephemeral_Key($J, je_sk)
  , !Journalist_Enrolled($NR, $J)]
  --[ // Actions for Lemmas
      Symmetric_Encryption_IN(m, k)
    , Journalist_Received($J, je_pk, $NR, s_pk, m)
    ]->
  [ Journalist_Recv($J, $NR, s_pk, msg) ]

rule Journalist_Reply [color=#6495ED]:
  let k = hkdf(~ss)
      je_pk = pk(je_sk)
      m = <'msg', ~msg, $J>
      c = senc(m, k)
      ss_encap = aenc(~ss, s_pk)
  in
  [ Journalist_Recv($J, $NR, s_pk, msg_old)
  , Journalist_Ephemeral_Key($J, je_sk)
  , Fr(~msg)
  , Fr(~ss) ]
  --[ // Actions for Lemmas
      Symmetric_Encryption_OUT(m, k)
    , Journalist_Sent($J, $NR, s_pk, m)
    ]->
  [ Out(<c, ss_encap>) ]

rule Source_Recv [color=#6495ED]:
  let ss = adec(ss_encap, s_sk)
      k = hkdf(ss)
      m = <'msg', msg, $J>
      s_pk = pk(s_sk)
  in
  [ In(<senc(m, k), ss_encap>)
  , !Ltk_Source_Encryption($S, s_sk) ]
  --[ // Actions for Lemmas
      Symmetric_Encryption_IN(m, k)
    , Source_Recieved(s_pk, m)
    ]->
  [ Source_Recv($S, msg, $J) ]

