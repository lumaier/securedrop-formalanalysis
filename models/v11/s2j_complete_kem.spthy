lemma Secrecy_Source_Message:
"All #t s j je_pk nr m. 
        Source_Sent(s, j, je_pk, nr, m) @ #t
  ==>   (not Ex #x. K(m) @ #x)
      | (Ex #x. Reveal_Journalist_Signing_Key(j) @ #x)
      | (Ex #x. Reveal_Journalist_Ephemeral_Key(j, je_pk) @ #x)
      | (Ex #x. Reveal_Newsroom_Key(nr) @ #x)"

lemma PFS_Source_Message:
"All #t s j je_pk nr m. 
        Source_Sent(s, j, je_pk, nr, m) @ #t
  ==>   (not Ex #x. K(m) @ #x)
      | (Ex #x. Reveal_Journalist_Signing_Key(j) @ #x & #x < #t)
      | (Ex #x. Reveal_Journalist_Ephemeral_Key(j, je_pk) @ #x)
      | (Ex #x. Reveal_Newsroom_Key(nr) @ #x & #x < #t)"

lemma Secrecy_Journalist_Message:
"All #t1 #t2 j nr s s_pk m. 
        Journalist_Sent(j, nr, s_pk, m) @ #t1
      & Register_Source(s, s_pk) @ #t2
  ==>   (not Ex #x. K(m) @ #x)
      | (Ex #x. Reveal_Source_Encryption_Key(s) @ #x)"

lemma PFS_Journalist_Message:
"All #t j nr s m. 
        Journalist_Sent(j, nr, s, m) @ #t
  ==>   (not Ex #x. K(m) @ #x)
      | (Ex #x. Reveal_Source_Encryption_Key(s) @ #x & #x < #t)"

lemma Non_Injective_Agreement_Source_Message:
"All #t j je_pk_1 nr s_pk m. 
        Journalist_Received(j, je_pk_1, nr, s_pk, m) @ #t
  ==>   (Ex #x je_pk_2. Source_Sent(s_pk, j, je_pk_2, nr, m) @ #x & #x < #t) 
      | (Ex #x. Reveal_Source_Encryption_Key(s_pk) @ #x)
      | (Ex #x. Reveal(j) @ #x)
      | (Ex #x. Reveal(nr) @ #x)"
  
lemma Injective_Agreement_Source_Message:
"All #t j je_pk_1 nr s_pk m. 
        Journalist_Received(j, je_pk_1, nr, s_pk, m) @ #t
  ==>   (Ex #x je_pk_2. Source_Sent(s_pk, j, je_pk_2, nr, m) @ #x 
              & #x < #t
              & not (Ex j_2 je_pk_3 nr_2 s_pk_2 #t2. Journalist_Received(j_2, je_pk_3, nr_2, s_pk_2, m) @ #t2 & not (#t2 = #t)))
      | (Ex #x. Reveal_Source_Encryption_Key(s_pk) @ #x)
      | (Ex #x. Reveal(j) @ #x)
      | (Ex #x. Reveal(nr) @ #x)"

end