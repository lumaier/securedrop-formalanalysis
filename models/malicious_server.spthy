// SOURCE MODEL
// Sending
rule Source_Send [color=#6495ED]:
  let s_apke_pk = pqpk(s_apke_sk)
      pt = <'submission', ~msg>
      ct1 = APKE_Enc(s_apke_sk, j_eapke_pk, pt)
      ct2 = PKE_Enc(j_epke_pk, <'pk', 'g'^s_fetching_sk, pk(s_pke_sk), s_apke_pk>)
      j_efetching_pk = 'g'^k
      ct3 = j_efetching_pk^~x
      ct4 = 'g'^~x
  in
  [ !Ltk_Source($S, s_fetching_sk, s_pke_sk, s_apke_sk)
  , !Pk_Newsroom($NR, nr_pk)
  , In(<<j_sig_pk, j_apke_pk>, sig_j_pk, <j_efetching_pk, j_epke_pk, j_eapke_pk>, sig_je_pk>)
  , Fr(~sess), Fr(~x), Fr(~msg) ]
  --[
      // check signatures of journalist's longterm signature and ephemeral encryption keys
      Eq(verify(sig_j_pk, <'signature', <j_sig_pk, j_apke_pk>>, nr_pk), true)
    , Eq(verify(sig_je_pk, <'ephemeral', <j_efetching_pk, j_eapke_pk>>, j_sig_pk), true)
      // Actions for Lemmas
    , Source_Sent(s_apke_pk, j_eapke_pk, $NR, ~msg)
    , ClientSend(<ct1, ct2, ct3, ct4>)
    , PrePQAttack()
    ]->
  [ Client_Out(~sess, $NR, <ct1, ct2, ct3, ct4>)
  , !MessageSpace(pt)
  , !NonPQSecKey(~x) ]

// Receiving
rule Source_Query [color=#6495ED]:
  [ !Ltk_Source($S, s_fetching_sk, s_pke_sk, s_apke_sk)
  , !Pk_Newsroom($NR, nr_pk)
  , Fr(~sess) ]
  -->
  [ Client_Out(~sess, $NR, 'request')
  , SourceQueried($S, $NR, ~sess, s_fetching_sk) ]

rule Source_ChallengeResponse [color=#6495ED]:
  let challenge_key = 'g'^k
  in
  [ SourceQueried($S, $NR, ~sess, s_fetching_sk)
  , Client_In(~sess, $NR, <challenge_key, ct>) ]
  --[ ClientSend(sdec(ct, challenge_key^s_fetching_sk)) ]->
  [ Client_Out(~sess, $NR, sdec(ct, challenge_key^s_fetching_sk))
  , SourceResponded($S, $NR, ~sess) ]

rule Source_Recv [color=#6495ED]:
  let pt = <'submission', m>
  in
  [ SourceResponded($S, $NR, ~sess)
  , Client_In(~sess, $NR, <ct1, ct2>)
  , In(<<j_sig_pk, j_apke_pk>, sig_j_pk>)
  , !APKE_MessageSpace(pt)
  , !Ltk_Source($S, s_fetching_sk, s_pke_sk, s_apke_sk)
  , !Pk_Newsroom($NR, nr_pk) ]
  --[ APKE_Dec(ct1, j_apke_pk, s_apke_sk, pt)
    , Eq(verify(sig_j_pk, <'signature', <j_sig_pk, j_apke_pk>>, nr_pk), true)
      // Actions for Lemmas
    , Source_Received(pqpk(s_apke_sk), j_apke_pk, $NR, m)
    , PrePQAttack()
    ]->
  []

// JOURNALISTS
// Receiving
rule Journalist_Query [color=#6495ED]:
  [ Journalist_Ephemeral_Key($J, ~j_fetching_sk, ~j_epke_sk, ~j_eapke_sk)
  , !Journalist_Enrolled($NR, $J)
  , Fr(~sess) ]
  -->
  [ Client_Out(~sess, $NR, 'request')
  , JournalistQueried($J, $NR, ~sess, ~j_fetching_sk, ~j_epke_sk, ~j_eapke_sk) ]

rule Journalist_ChallengeResponse [color=#6495ED]:
  [ JournalistQueried($J, $NR, ~sess, ~j_fetching_sk, ~j_epke_sk, ~j_eapke_sk)
  , Client_In(~sess, $NR, <challenge_key, ct>) ]
  --[ ClientSend(sdec(ct, challenge_key^~j_fetching_sk)) ]->
  [ Client_Out(~sess, $NR, sdec(ct, challenge_key^~j_fetching_sk))
  , JournalistResponded($J, $NR, ~sess, ~j_epke_sk, ~j_eapke_sk) ]

rule Journalist_Recv [color=#6495ED,derivchecks]:
  let pt1 = <'submission', m>
      pt2 = <'pk', s_fetching_pk, s_pke_pk, s_apke_pk>
  in
  [ JournalistResponded($J, $NR, ~sess, ~j_epke_sk, ~j_eapke_sk)
  , Client_In(~sess, $NR, <ct1, ct2>)
  , !APKE_MessageSpace(pt1), !PKE_MessageSpace(pt2) ]
  --[ APKE_Dec(ct1, s_apke_pk, ~j_eapke_sk, pt1)
    , PKE_Dec(ct2, ~j_epke_sk, pt2)
      // Actions for Lemmas
    , Journalist_Received(pqpk(~j_eapke_sk), $NR, s_apke_pk, m)
    , PrePQAttack()
    ]->
  [ Journalist_Recv($J, s_fetching_pk, s_pke_pk, s_apke_pk) ]

// Sending
rule Journalist_Send [color=#6495ED]:
  let j_apke_pk = pqpk(~j_apke_sk)
      pt = <'submission', ~msg>
      ct1 = APKE_Enc(~j_apke_sk, s_apke_pk, pt)
      s_fetching_pk = 'g'^k
      ct3 = s_fetching_pk^~x
      ct4 = 'g'^~x
  in
  [ Journalist_Recv($J, s_fetching_pk, s_pke_pk, s_apke_pk)
  , !Journalist_Enrolled($NR, $J)
  , !Ltk_Journalist_APKE_Key($J, ~j_apke_sk)
  , Fr(~sess), Fr(~msg), Fr(~x) ]
  --[ ClientSend(<ct1, '0x0', ct3, ct4>)
      // Actions for Lemmas
    , Journalist_Sent($J, $NR, s_apke_pk, ~msg)
    , PrePQAttack()
    ]->
  [ Client_Out(~sess, $NR, <ct1, '0x0', ct3, ct4>)
  , !APKE_MessageSpace(pt)
  , !NonPQSecKey(~x) ]

// SECUREDROP INSTANCE

rule ServerStore:
  [ !SecureDropInstance($NR), Server_In(~sess, $NR, <ct1, ct2, ct3, ct4>) ]
  -->
  [ Ciphertext($NR, ct1, ct2, ct3, ct4)
  , !Challenge($NR, ct3, ct4) ]

rule ServerChallenge:
  let pk = 'g'^k1
      ss = 'g'^k2
  in
  [ Server_In(~sess, $NR, 'request')
  , !Challenge($NR, ss, pk), Fr(~r), Fr(~id) ]
  --[ ServerSend(<'challenge', pk^~r, senc(~id, ss^~r)>) ]->
  [ Server_Out(~sess, $NR, <'challenge', pk^~r, senc(~id, ss^~r)>)
  , Challenged($NR, ~sess, ~id, ss, pk) ]

rule ServerChallengeSuccess:
  [ Challenged($NR, ~sess, ~id, ss, pk), Ciphertext($NR, ct1, ct2, ss, pk)
  , Server_In(~sess, $NR, ~id) ]
  --[ ServerSend(<ct1, ct2>) ]->
  [ Server_Out(~sess, $NR, <ct1, ct2>) ]

// RESTRICTIONS AND LEMMAS

restriction Eq:
  "All t1 t2 #x. Eq(t1, t2) @ #x ==> t1 = t2"

