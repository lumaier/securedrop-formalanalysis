rule Journalist_Register_Ephemeral_Key [color=#FF7F50]:
  let j_efetching_pk = 'g'^~j_fetching_sk
      j_epke_pk = pqpk(~j_epke_sk)
      j_eapke_pk = pqpk(~j_eapke_sk)
      sig_je_pk = sign(<'ephemeral', <j_efetching_pk, j_eapke_pk>>, ~j_sig_sk)
  in
  [ !Ltk_Journalist_SIG_Key($J, ~j_sig_sk)
  , Fr(~j_fetching_sk)
  , Fr(~j_epke_sk)
  , Fr(~j_eapke_sk) ]
  --[ Honest(j_epke_pk)
    , Honest(j_eapke_pk)
    , PrePQAttack() ]->
  [ Out(<<j_efetching_pk, j_epke_pk, j_eapke_pk>, sig_je_pk>)
  , Journalist_Ephemeral_Key($J, ~j_fetching_sk, ~j_epke_sk, ~j_eapke_sk)
  , !NonPQSecKey(~j_fetching_sk)
  , !NonPQSecKey(~j_epke_sk) ]

