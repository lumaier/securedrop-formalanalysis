rule Register_Source_Passphrase [color=#FF7F50]:
  let s_fetching_sk = kdf(<'FETCHING', ~passphrase>)
      s_pke_sk = kdf(<'PKE', ~passphrase>)
      s_apke_sk = kdf(<'APKE', ~passphrase>)
      s_fetching_pk = 'g'^s_fetching_sk
      s_pke_pk = pqpk(s_pke_sk)
      s_apke_pk = pqpk(s_apke_sk)
  in
  [ Fr(~passphrase) ]
  --[ Honest(s_pke_pk)
    , Honest(s_apke_pk)
    , PrePQAttack() ]->
  [ !Ltk_Source($A, s_fetching_sk, s_pke_pk, s_apke_sk)
  , !NonPQSecKey(s_fetching_sk)
  , !NonPQSecKey(s_pke_pk)
  , Out(<s_fetching_pk, s_pke_pk, s_apke_pk>) ]

